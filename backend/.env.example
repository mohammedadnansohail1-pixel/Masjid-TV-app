# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://masjid:masjid123@localhost:5432/masjid_db"

# JWT Authentication
JWT_SECRET="your-secret-key-change-in-production-use-long-random-string"
JWT_EXPIRES_IN="7d"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379

# CORS - Comma-separated list of allowed origins
CORS_ORIGIN="http://localhost:3001,http://localhost:3002,http://localhost:5173"

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# AWS S3 (File Storage) - Optional, falls back to local storage
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# Email Service (SendGrid/Resend) - Optional
EMAIL_PROVIDER="sendgrid"
SENDGRID_API_KEY=""
RESEND_API_KEY=""

# SMS Service (Twilio) - Optional
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST="./uploads"
